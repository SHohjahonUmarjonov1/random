<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LIstActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/shuffle"
            tools:listitem="@layout/items_list"
            tools:itemCount="100"
            android:padding="12dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:ignore="MissingConstraints"/>
<Button
        android:id="@+id/shuffle"
        android:layout_marginHorizontal="16dp"
        android:text="@string/activity_list_shuffle"
        app:layout_constraintTop_toBottomOf="@+id/recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"/>
    <Button
            android:text="@string/activity_list_add"
            android:id="@+id/add"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/shuffle"
            app:layout_constraintStart_toStartOf="@+id/shuffle"
            app:layout_constraintEnd_toEndOf="@+id/shuffle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>